<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvEquip"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="7dp"
    android:background="@color/background"
    android:padding="10dp"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tvEquipmentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#333333"
            android:textSize="24sp"
            android:layout_marginTop="13dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity : 20"
            android:layout_marginRight="55dp"
            android:layout_marginEnd="55dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/tvAvailStocks"
            android:layout_toStartOf="@+id/tvAvailStocks"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/tvAvailStocks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Stocks : 20"
            android:layout_marginRight="46dp"
            android:layout_marginEnd="46dp"
            android:layout_alignBaseline="@+id/tvQuantity"
            android:layout_alignBottom="@+id/tvQuantity"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</android.support.v7.widget.CardView>