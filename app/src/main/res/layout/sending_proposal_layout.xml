<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >


    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <Button
            android:id="@+id/uploadButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etTimeStart"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="43dp"
            android:background="@color/redhaze"
            android:text="Send Proposal"
            android:textColor="@color/text" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/etTitleProposal"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="11dp"
        android:backgroundTint="#1BA39C"
        android:ems="10"
        android:hint="Title Proposal"
        android:inputType="textPersonName"
        android:textColor="@color/text"
        android:textColorHint="@color/text"
        android:textSize="50sp"
        android:layout_below="@+id/messageText"
        android:layout_centerHorizontal="true" />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/etGenObjectives"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_alignLeft="@+id/etTitleProposal"
            android:layout_alignStart="@+id/etTitleProposal"
            android:layout_below="@+id/etTitleProposal"
            android:layout_marginTop="10dp"
            android:backgroundTint="#1BA39C"
            android:ems="1"
            android:gravity="top"
            android:hint="General Objectives"
            android:inputType="textMultiLine"
            android:textColor="@color/text"
            android:textColorHint="@color/text" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dp"
            android:text="New Proposal Information"
            android:textColor="#333333"
            android:textSize="20sp" />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/etSpecObjectives"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_alignLeft="@+id/etGenObjectives"
            android:layout_alignStart="@+id/etGenObjectives"
            android:layout_below="@+id/etGenObjectives"
            android:layout_marginTop="10dp"
            android:backgroundTint="#1BA39C"
            android:ems="10"
            android:gravity="top"
            android:hint="Specific Objectives"
            android:inputType="textMultiLine"
            android:textColor="@color/text"
            android:textColorHint="@color/text" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/etBudget"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#1BA39C"
        android:ems="10"
        android:hint="Proposed Budget"
        android:inputType="number"
        android:textColor="@color/text"
        android:textColorHint="@color/text"
        android:layout_below="@+id/etSpecObjectives"
        android:layout_alignLeft="@+id/etSpecObjectives"
        android:layout_alignStart="@+id/etSpecObjectives" />

        <TextView
            android:id="@+id/messageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/etTitleProposal"
            android:layout_alignStart="@+id/etTitleProposal"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="17dp"
            android:text="Uploading File"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Schedule"
            android:textColor="#333333"
            android:textSize="18sp"
            android:layout_below="@+id/etBudget"
            android:layout_alignLeft="@+id/etBudget"
            android:layout_alignStart="@+id/etBudget" />

        <EditText
            android:id="@+id/etDateStart"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Date"
            android:inputType="date"
            android:layout_below="@+id/textView30"
            android:layout_toLeftOf="@+id/textView32"
            android:layout_toStartOf="@+id/textView32"
            android:layout_marginRight="7dp"
            android:layout_marginEnd="7dp" />

        <EditText
            android:id="@+id/etDateEnd"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/etDateStart"
            android:layout_alignBottom="@+id/etDateStart"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@+id/textView32"
            android:layout_toRightOf="@+id/textView32"
            android:ems="10"
            android:hint="Date"
            android:inputType="date" />

        <TextView
            android:id="@+id/textView32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/etDateEnd"
            android:layout_alignBottom="@+id/etDateEnd"
            android:layout_centerHorizontal="true"
            android:text="to"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etTimeStart"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/etDateStart"
            android:layout_alignStart="@+id/etDateStart"
            android:layout_below="@+id/etDateStart"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="Time"
            android:inputType="time" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="to"
            android:textSize="18sp"
            android:layout_alignBaseline="@+id/etTimeStart"
            android:layout_alignBottom="@+id/etTimeStart"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/etTimeEnd"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/etDateEnd"
            android:layout_alignStart="@+id/etDateEnd"
            android:layout_alignTop="@+id/etTimeStart"
            android:ems="10"
            android:hint="Time"
            android:inputType="time" />

    </RelativeLayout>
</ScrollView>
